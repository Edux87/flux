@require '../../_config/*'
@require '../../_mixins/*'

/*!!
* index
* @controller game
* @view index
*/

body
	background black

.box_game
	background linear-gradient(to top,#69a0c1,#333333)
	padding-top 20px
	padding-bottom 20px
	color #8f725b
	transition color 1s ease
	height 620px

.balloon
	margin-top 120px
	margin-bottom 120px
	max-width 200px
	max-height 298px

.floating
	animation-name floating
	-webkit-animation-name floating
	animation-duration 4s
	-webkit-animation-duration 4s
	animation-iteration-count infinite
	-webkit-animation-iteration-count infinite

.aladino
	width 46px
	height 66px
.running_1
	sprite($aladino_1)
.running_2
	sprite($aladino_2)
.running_3
	sprite($aladino_3)
.running_4
	sprite($aladino_4)
.running_5
	sprite($aladino_5)
.running_6
	sprite($aladino_6)
.running_7
	sprite($aladino_7)
.running_8
	sprite($aladino_8)
.running_9
	sprite($aladino_9)
.running_10
	sprite($aladino_10)
.running_11
	sprite($aladino_11)


@keyframes floating {
	0% {
		transform translateY(0%)  
	}
	50% {
		transform translateY(7%)  
	}   
	100% {
		transform translateY(0%)
	}           
}

@-webkit-keyframes floating {
	0% {
		-webkit-transform translateY(0%)  
	}
	50% {
		-webkit-transform translateY(7%)  
	}   
	100% {
		-webkit-transform translateY(0%)
	}           
}



#terminal
	position fixed
	bottom 0
	width 100%
	margin 5px 0 0 0
	padding 10px
	background #000000
	max-height 100px
	color #FFFFFF
	textarea
		background #000
		color white
		font-size 13px
		font-family sans-serif
		border 0
		width 100%
		padding 5px

