/*
* Buttons
* @module buttons
*/

.btn
	border none
	border-radius 4px
	color black
	display inline-block
	font-family $familyPrimary
	line-height 36px
	padding 0 13px
	position relative
	text-align center
	vertical-align top
.btn_save
	background #6ad934
	padding 10px 0 5px
	font-size 25px
	margin 25px 0 0 127px
	width 325px
	&:hover
		background #5CBE2D
